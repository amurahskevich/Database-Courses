@model IReadOnlyCollection<Business.Dto.ClientDto>

    <a type="button" class="btn btn-dark" asp-action="Create" asp-route-id="@null" style="margin-bottom: 15px;">Добавить клиента</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Имя</th>
                <th scope="col">Возраст</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>
                        @client.FirstName
                        <br />
                        @client.LastName
                    </td>
                    <td>@client.Age</td>
                    <td>
                        <a asp-action="Create" asp-route-id="@client.Id" class="btn btn-link">Редактировать</a>
                        <br />
                        <a asp-action="Delete" asp-route-id="@client.Id" class="btn btn-link">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>