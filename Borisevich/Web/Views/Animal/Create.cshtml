@using Domain.Entity
@model Contracts.Animal.AnimalDto

<form asp-action="Create" method="post">
    <input asp-for="Id" type="number" class="form-control" hidden>
    <div class="form-group">
        <label>Кличка</label>
        <input asp-for="Name" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label>Пол</label>
        <select asp-for="Sex" class="form-control">
            @if (Model?.Sex == Sex.Male)
            {
                <option selected value="Male">Самец</option>
            }
            else
            {
                <option value="Male">Самец</option>
            }

            @if (Model?.Sex == Sex.Female)
            {
                <option selected value="Female">Самка</option>
            }
            else
            {
                <option value="Female">Самка</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Вид</label>
        <select asp-for="KindId" class="form-control">
            @foreach (var kind in ViewBag.Kinds)
            {
                if (Model?.KindId == kind.Id)
                {
                    <option selected value="@kind.Id">@kind.Name</option>
                }
                else
                {
                    <option value="@kind.Id">@kind.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label>Клетка</label>
        <select asp-for="CageId" class="form-control">
            @foreach (var cage in ViewBag.Cages)
            {
                if (Model?.CageId == cage.Id)
                {
                    <option selected value="@cage.Id">@cage.Number</option>
                }
                else
                {
                    <option value="@cage.Id">@cage.Number</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>